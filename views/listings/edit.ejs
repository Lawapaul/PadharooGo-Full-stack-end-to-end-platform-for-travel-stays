<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
        <br><br><br>
        <h1>Edit Listing</h1>
        <br>
        <form method="post" action="/listings/edit/<%=id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" id="title" placeholder="Enter Title" name="listing[title]" class="form-control" value="<%=fetched_data.title%>" required>
                <div class="invalid-feedback">Enter Valid Title</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea id="description" name="listing[description]" placeholder="Enter Description" class="form-control" required><%=fetched_data.description%></textarea>
                <div class="invalid-feedback">Enter Valid Description</div>
            </div>
            <div class="mb-3">
                Original Listing Image <br>
                <img src="<%= originalImageUrl%>" alt="">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Upload Listing Image</label>
                <input type="file" id="image" name="listing[image][url]" class="form-control">
                <div class="invalid-feedback">
                    Please provide an image URL.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                    <input type="number" id="price" placeholder="Enter Price" name="listing[price]" class="form-control" required>
                    <div class="invalid-feedback">
                        Please provide a price.
                    </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="country">Country</label>
                    <input type="text" id="country" placeholder="Enter Country" name="listing[country]" class="form-control" required>
                    <div class="invalid-feedback">
                        Please provide a country.
                    </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input type="text" id="location" placeholder="Enter Location" name="listing[location]" class="form-control" value="<%=fetched_data.location%>" required>
                <div class="invalid-feedback">Enter Valid Location</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="category">Category</label>
                <select name="listing[category]" class="form-select" aria-label="Default select example" required>
                    <option value="">Select Category</option>
                    <option value="trending" <%= fetched_data.category === 'trending' ? 'selected' : '' %>>Trending</option>
                    <option value="rooms" <%= fetched_data.category === 'rooms' ? 'selected' : '' %>>Rooms</option>
                    <option value="iconic cities" <%= fetched_data.category === 'iconic cities' ? 'selected' : '' %>>Iconic Cities</option>
                    <option value="mountains" <%= fetched_data.category === 'mountains' ? 'selected' : '' %>>Mountains</option>
                    <option value="castles" <%= fetched_data.category === 'castles' ? 'selected' : '' %>>Castles</option>
                    <option value="amazing pools" <%= fetched_data.category === 'amazing pools' ? 'selected' : '' %>>Amazing Pools</option>
                    <option value="camping" <%= fetched_data.category === 'camping' ? 'selected' : '' %>>Camping</option>
                    <option value="farms" <%= fetched_data.category === 'farms' ? 'selected' : '' %>>Farms</option>
                    <option value="artic" <%= fetched_data.category === 'artic' ? 'selected' : '' %>>Artic</option>
                    <option value="domes" <%= fetched_data.category === 'domes' ? 'selected' : '' %>>Domes</option>
                    <option value="boats" <%= fetched_data.category === 'boats' ? 'selected' : '' %>>Boats</option>
                </select>
            </div>
            <br><br>
            <button type="submit" class="btn btn-danger">Submit</button>
            <br><br><br>
        </form>
    </div>
</div>
<script src="/Javascript/script.js"></script>